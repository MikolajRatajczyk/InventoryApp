<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ratajczykdev.inventoryapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CatalogActivity"
            android:label="@string/products_catalog_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProductDetailActivity"
            android:label="@string/details_title" />
        <activity
            android:name=".ProductEditActivity"
            android:label="@string/edit_product_title" />
        <activity
            android:name=".statistics.StatisticsActivity"
            android:label="@string/statistics_title" />
        <activity
            android:name=".statistics.GraphsActivity"
            android:label="@string/graphs_title" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/about_title" />
        <activity android:name=".settings.SettingsActivity"></activity>
    </application>

</manifest>