<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ratajczykdev.inventoryapp">

    <!-- TODO: add permissions dialog -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CatalogActivity"
            android:label="@string/products_catalog_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".data.ProductProvider"
            android:authorities="com.ratajczykdev.inventoryapp"
            android:exported="false" />

        <activity
            android:name=".ProductDetailActivity"
            android:label="@string/details_title" />
        <activity
            android:name=".ProductEditActivity"
            android:label="@string/edit_product_title" />
        <activity android:name=".statistics.StatisticsActivity" />
        <activity android:name=".statistics.GraphsActivity" />
        <activity android:name=".AboutActivity" />
    </application>

</manifest>