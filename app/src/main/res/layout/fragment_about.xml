<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".about.AboutFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/author_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/mikolaj_ratajczyk"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/created_textview"
            app:layout_constraintStart_toStartOf="@+id/created_textview"
            app:layout_constraintTop_toBottomOf="@+id/created_textview" />

        <TextView
            android:id="@+id/email_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/mikolaj_ratajczyk_at_gmail"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/author_textview"
            app:layout_constraintStart_toStartOf="@+id/author_textview"
            app:layout_constraintTop_toBottomOf="@+id/author_textview" />

        <ImageView
            android:id="@+id/store_imageview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_store_background_oval"
            android:contentDescription="@string/content_description_big_app_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:srcCompat="@drawable/ic_store" />

        <TextView
            android:id="@+id/created_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/created_by"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/store_imageview"
            app:layout_constraintStart_toStartOf="@+id/store_imageview"
            app:layout_constraintTop_toBottomOf="@+id/store_imageview" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>




